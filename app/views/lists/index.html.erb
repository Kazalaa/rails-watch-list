<div class="banner">
  <h1 class="banner-title">Save any kind of movies</h1>
  <div>
  <h3 class="banner-text"></h3>
  </div>
</div>

<div class="container">
  <div class="list_header">
    <h1>My Lists</h1>
    <%= link_to "Create a movie List", new_list_path, class:"btn btn-primary" %>
  </div>
  <div class="cards_grid">
      <% @lists.each do |list| %>
        <%= link_to list_path(list) do%>
          <div class="list_card" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path list.photo.key %>')">
          <div class="card-list-name"> <%= list.name %> </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
