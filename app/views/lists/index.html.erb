<div class="banner">
  <h1 class="banner-text">Save any kind of movies</h1>
</div>

<div class="container">
  <div class="list_header">
    <h1>My Lists</h1>
    <%= link_to "Create a movie List", new_list_path, class:"btn btn-primary" %>
  </div>
  <div class="cards_grid">
      <% @lists.each do |list| %>
        <div class="list_card">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
  </div>
</div>
